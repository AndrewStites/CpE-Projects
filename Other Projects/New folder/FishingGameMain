		switch(newDie.roll()){
		case 1: System.out.println("Wowza! That's pretty neat!"); break;
		case 2: System.out.println("Well look at you getting all that pointage!"); break;
		case 3: System.out.println("Holy Guacamole! That's a score."); break;
		default: System.out.println("Welp, you did a thing."); break;

		}

	}

public int scoreFish(int fishGiven){
	int fishPoint;

	if (fishGiven == 1){
		fishPoint = 3;
	}
	else if(fishGiven == 2){
		fishPoint = 2;
	}
	else if(fishGiven == 3){
		fishPoint = 1;
	}
return fishPoint;

}


}